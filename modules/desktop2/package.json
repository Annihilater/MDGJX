{
  "name": "MDGJX",
  "version": "v5.3.96",
  "description": "秒达工具箱以独创高效的输入方式，让您可以快速呼出各类工具、文档及笔记等资源，免费安全无广告，现已完全开源！",
  "author": "MDGJX <work7z@outlook.com>",
  "homepage": "https://mdgjx.com",
  "main": "src-dist/main.js",
  "scripts": {
    "dev": "sh ./pipeline/dev-electron.sh",
    "compileTS": "npx tsc",
    "build": "sh ./pipeline/build-electron.sh"
  },
  "build": {
    "appId": "com.mdgjx.app",
    "productName": "秒达工具箱",
    "artifactName": "MDGJX-desktop-v${version}-${os}-${arch}.${ext}",
    "asar": false,
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    },
    "extraFiles": [
      {
        "from": "minimal-dist",
        "to": "resources/app/minimal-dist"
      }
    ],
    "files": [
      "nsis",
      "LICENSE",
      "pages-dist",
      "src-dist",
      "package.json",
      "build",
      "node_modules/**/*",
      "node_modules/*",
      "package.json"
    ],
    "win": {
      "requestedExecutionLevel": "asInvoker",
      "icon": "build/icon.ico",
      "target": [
        "nsis",
        "zip"
      ],
      "rfc3161TimeStampServer": "http://timestamp.entrust.net/TSS/RFC3161sha2TS"
    },
    "nsis": {
      "language": "0004",
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "秒达工具箱(MDGJX)",
      "license": "./LICENSE",
      "include": "nsis/installer.nsh",
      "warningsAsErrors": false,
      "installerSidebar": "nsis/installerSidebar.bmp",
      "uninstallerSidebar": "nsis/uninstallerSidebar.bmp"
    },
    "publish": null,
    "electronVersion": "17.1.2"
  },
  "devDependencies": {
    "@types/detect-port": "^1.3.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/tcp-port-used": "^1.0.4",
    "electron": "^17.1.2",
    "electron-builder": "22.14.13",
    "ts-node": "^10.0.0",
    "typescript": "~4.5.4",
    "vite": "^5.0.12"
  },
  "dependencies": {
    "axios": "^0.26.1",
    "core-util-is": "^1.0.3",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.1",
    "inherits": "^2.0.4",
    "jquery": "^3.6.0",
    "jszip": "^3.10.1",
    "localforage": "^1.10.0",
    "lodash": "^4.17.21",
    "npm-force-resolutions": "0.0.10",
    "number-to-chinese-words": "^1.0.20",
    "number-to-words": "^1.2.4",
    "pinyin-engine": "^1.2.2",
    "shelljs": "^0.8.5",
    "unzip": "^0.1.11",
    "util-deprecate": "^1.0.2",
    "winston": "^3.8.1",
    "winston-daily-rotate-file": "^4.7.1"
  }
}
