  "version": "0.2.0",
  "configurations": [
    {
      "name": "web2",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/modules/web",
      "request": "launch",
      "command": "npm run dev"
    },
    {
      "name": "web2-server",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/modules/web-server",
      "request": "launch",
      "command": "npm run start"
    },
    {
      "name": "desktop2",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/modules/desktop2",
      "command": "npm run dev"
    },
    {
      "name": "d2-pages-local",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/modules/desktop2/pages/local",
      "command": "npm run dev"
    },
    {
      "name": "it-tools dev server",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/addons/it-tools",
      "command": "npm run dev"
    },
  ],
  "compounds": [
    {
      "name": "Run it at once",
      "configurations": [
        "desktop2",
        "web2", 
        "web2-server",
        "d2-pages-local",
        "it-tools dev server"
    ],
      "stopAll": true
    }
  ]
}
